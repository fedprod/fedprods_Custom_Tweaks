<moreloot>
  <conditional>
    <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Tweaks.Gameplay.MoreLoot') == 'On'">
      <set xpath="entity_classes/entity_class[starts-with(@name, 'zombieTemplate')]/property[@name='LootDropProb']/@value">.05</set>
      <set xpath="entity_classes/entity_class[contains(@name, 'Feral')]/property[@name='LootDropProb']/@value">.1</set>
      <set xpath="entity_classes/entity_class[contains(@name, 'Radiated')]/property[@name='LootDropProb']/@value">.2</set>
      <set xpath="entity_classes/entity_class[@name='zombieWightFeral']/property[@name='LootDropProb']/@value">.15</set>
      <set xpath="entity_classes/entity_class[contains(@name, 'Charged')]/property[@name='LootDropProb']/@value">.15</set>
      <set xpath="entity_classes/entity_class[contains(@name, 'Infernal')]/property[@name='LootDropProb']/@value">.15</set>	
    </if>
    <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Tweaks.Gameplay.MoreLoot') == 'Off'"/>
  </conditional>
</moreloot>
